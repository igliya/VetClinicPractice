<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" href="{{ asset('icons/favicon.png') }}">
        <title>{% block title %}VetClinic{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
                  integrity="undefined" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            {% block homestyles %}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="preloader">
            <div class="preloader__row">
                <div class="preloader__item"></div>
                <div class="preloader__item"></div>
            </div>
        </div>
        <!-- Header start -->
        <header class="header">
            <div class="wrapper">
                <div class="header__wrapper">
                    <div class="header__logo">
                        <a href="{{ path('app_home') }}" class="header__logo-link">
                            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="header__logo-pic">
                        </a>
                    </div>
                    <nav class="header__nav">
                        <ul class="header__list">
                            {% block headernav %}
                                {% if not is_granted('ROLE_USER') %}
                                    <li class="header__item">
                                        <a href="{{ path('app_login') }}" class="header__link">Вход</a>
                                    </li>
                                {% else %}
                                    <li class="header__item">
                                        <div class="dropdown">
                                            <button class="dropdown-button">{{ app.user.username }}</button>
                                            <div class="dropdown-content">
                                                <a href="{{ path('app_logout') }}">Выход</a>
                                            </div>
                                        </div>
                                    </li>
                                {% endif %}
                            {% endblock %}
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <!-- Header end -->
        {% block main %}
            <div class="row main__row d-flex justify-content-center">
                <main class="col-md-10 ml-sm-auto col-lg-10 px-4 bg-white" role="main">
                    {% block content %}
                    {% endblock %}
                </main>
            </div>
        {% endblock %}
        {% block javascripts %}
            <script>
                window.onload = function () {
                    document.body.classList.add('loaded_hiding');
                    window.setTimeout(function () {
                        document.body.classList.add('loaded');
                        document.body.classList.remove('loaded_hiding');
                    }, 500);
                }
            </script>
        {% endblock %}
    </body>
</html>
